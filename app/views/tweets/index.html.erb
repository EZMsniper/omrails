<div class="container">

  <h1>Tweets</h1>

    <table class="table">
      <thead class="thead_inverse">
        <tr>
          <th>User</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.user.try(:email) %></td>
            <td><%= tweet.content %></td>
            <td><%= link_to 'Show', tweet %></td>
              <% if tweet.user == current_user %>
                <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
              <% end %>
              <% if tweet.user == current_user %>
                <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you fkn serious?' } %></td>
              <% else %>
              <td><%= link_to 'Sign In as this user to edit their tweet', signin_path %></td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <% if user_signed_in? %>
      <%= link_to 'New Tweet', new_tweet_path %>
    <% end %>
</div>